{
  "name": "netmonitor",
  "productName": "NetMonitor",
  "version": "1.0.0",
  "description": "Electron wrapper for Nmap CLI. Graduation year school project",
  "main": "src/app.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lintcheck": "prettier -c src/**/*.{js,css}",
    "lint": "prettier --write src/**/*.{js,css}"
  },
  "keywords": [],
  "author": {
    "name": "Batman",
    "email": "20029433+Stacced@users.noreply.github.com"
  },
  "license": "GPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "netmonitor"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "endOfLine": "crlf"
  },
  "dependencies": {
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "ip": "^1.1.5",
    "node-nmap": "https://github.com/Stacced/node-nmap/",
    "nodejs-traceroute": "^1.2.0",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.51",
    "@electron-forge/maker-deb": "6.0.0-beta.51",
    "@electron-forge/maker-rpm": "6.0.0-beta.51",
    "@electron-forge/maker-squirrel": "6.0.0-beta.51",
    "@electron-forge/maker-zip": "6.0.0-beta.51",
    "electron": "9.0.0",
    "prettier": "2.0.5"
  }
}
